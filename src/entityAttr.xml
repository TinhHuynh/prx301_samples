<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE document [
        <!ELEMENT document (graphics)+>
        <!ELEMENT graphics EMPTY>
        <!ATTLIST graphics image ENTITIES #REQUIRED
                alternative CDATA #IMPLIED>
        <!NOTATION PNG SYSTEM "/usr/local/bin/PNGViewer">
        <!ENTITY logo SYSTEM "logo.png" NDATA PNG>
        <!NOTATION JPG SYSTEM "/usr/local/bin/PNGViewer">
        <!ENTITY logoJpg SYSTEM "logo.jpg" NDATA JPG>
        <!ENTITY wwwc "World wide web corp">
        ]>
<document>
    <graphics image="logo logoJpg" alternative="&wwwc; Logo"/>
</document>